{{!< default}}

{{#post}}

<article class="gh-article {{post_class}}">

    <header class="gh-header gh-canvas">
        <div class="gh.post-meta-container">
            <span class="gh-post-meta"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time> <span class="bull">&bull;</span> {{reading_time}} &nbsp;</span>
            <a class="card-tag-{{primary_tag.name}}" href="{{primary_tag.url}}">{{primary_tag.name}}</a>
        </div>
        <h1 class="gh-title">{{title}}</h1>

        {{#if custom_excerpt}}
        <p class="gh-excerpt">{{custom_excerpt}}</p>
        {{/if}}

        {{#if feature_image}}
            <img class="gh-feature-image" src="{{feature_image}}" alt="{{title}}" />
        {{/if}}
    </header>

    <div class="gh-content gh-canvas">
        {{content}}

{{!-- NEWSLETTER Abajo
        <div style="margin-top: 2rem;">

        </div>

--}}

    </div>

    <footer class="gh-content gh-canvas gh-post-footer">

{{!-- INCLUIR AUTOR

        <div class="gh-post-authors">
            Written by {{#foreach authors}}<a href="{{url}}">{{name}}</a>{{/foreach}}
        </div>
--}}
        {{#get "posts" include="tags" limit="3" filter="id:-{{id}}+tag:{{primary_tag.slug}}" as |related|}}
            <div class="gh-content">
                <h4>Recomendados para ti</h4>
                    <div>
                    {{#foreach related}}
                        {{> "card"}}
                    {{/foreach}}
                    </div>
            </div>
            
        {{/get}}



        {{!--
        <section class="gh-post-comments">
            If you want to embed comments, this is a good place to do it!
        </section>
        --}}

    </footer>

</article>

{{!-- READ MORE
<aside class="gh-readmore">
    <div class="gh-container">
        <div class="gh-readmore-next">
            {{#next_post}}<a href="{{url}}">{{> "icons/arrow-left"}} <h4>{{title}}</h4></a>{{/next_post}}
        </div>
        <div class="gh-readmore-prev">
            {{#prev_post}}<a href="{{url}}">
                <h4>{{title}}</h4> {{> "icons/arrow-right"}}
            </a>{{/prev_post}}
        </div>
    </div>
</aside>

--}}
{{/post}}