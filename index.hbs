{{!< default}}

<div class="gh-page">
    <div class="gh-container">
            {{#get "posts" filter="featured:true" include="authors,tags" limit="5" as |featured|}}
                {{#if featured}}
            <span>Artículos destacados </span>
                {{#foreach posts}}

                    {{> "card-featured"}} {{!-- partials/card.hbs --}}

                {{/foreach}}
                {{/if}}
            {{/get}}
        
        <span>Artículos recientes </span>
        <div class="gh-postfeed">
        {{#foreach posts}}

            {{> "card"}} {{!-- partials/card.hbs --}}

        {{/foreach}}
        </div>

    </div>
</div>