{{!< default}}

<div class="gh-page">
    <div class="gh-container">
        <div class="gh-postfeed">
        {{#get "posts" filter="featured:true" include="authors,tags" limit="5" as |featured|}}
                {{#if featured}}
                {{#foreach posts}}

                    {{> "card-featured"}}

                {{/foreach}}
                {{/if}}
            {{/get}} 
        
        {{#get "posts"  filter="tags:-[libros]"}}
        {{#foreach posts}}
        
            {{> "card"}} {{!-- partials/card.hbs --}}
        
        {{/foreach}}
        {{/get}}
        </div>
        </div>

    </div>
</div>


